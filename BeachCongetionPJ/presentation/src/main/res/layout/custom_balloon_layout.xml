<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_gravity="center"
    android:background="@color/white"
    >

    <TextView
        android:id="@+id/poiNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guidTextView"
        android:text="@string/poi_name"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:focusable="true"
        />
    <TextView
        android:id="@+id/guidTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/find_road_guide"
        app:layout_constraintTop_toBottomOf="@id/poiNameTextView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="9sp"
        tools:ignore="SmallSp" />

</androidx.constraintlayout.widget.ConstraintLayout>